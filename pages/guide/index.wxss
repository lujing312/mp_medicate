  align-items: center;
}
.icon-what {
  color: #C9C9C9;
  font-size: 34rpx;
  padding-left: 50rpx;
  position: absolute;
  right: -35rpx;
  top: -35rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.view-main-cover {
  font-size: 28rpx;
