.container {
  padding: 20rpx 0rpx 60rpx 0rpx;
}
.home-read-guide {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  border-bottom: 2rpx solid #EFEFF5;
  padding: 0rpx 40rpx;
}
.main {
  padding: 0rpx 40rpx;
}
.resd-guide-left {
  font-size: 28rpx;
}
.home-drug-view {
  width: 664rpx;
  margin-top: 40rpx;
  border-radius: 50rpx;
  padding: 32rpx 38rpx;
  box-shadow: 0 2px 16px 0 rgba(0,0,0,0.15);
  box-sizing: border-box;
}
.drug-view-logo {
  width: 40rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.icon-big {
  font-size: 24rpx;
  color: #C9C9C9;
}
.drug-view-text {
