page {
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color:#F7F7F7;
  position: relative;
  margin: 0;
  padding: 0;
}
.icon-search {
  color: #C9C9C9;
  margin-right: 10rpx;
}
.icon-scan {
  color: #fff;
  font-size: 80rpx;
}
.icon-change {
  color: #2296F3;
  width: 60rpx;
  height: 60rpx;
  background-color: rgb(235, 244, 252);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  font-size: 34rpx;
}
.icon-user {
  color: #2296F3;
  width: 60rpx;
  height: 60rpx;
  background-color: rgb(235, 244, 252);
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  font-size: 34rpx;
}
.first-bg-img {
  width: 100%;
  height: 400rpx;
  margin: 0;
  padding: 0;
  display: block;
  border: none;
}
.home-search {
  width: 670rpx;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.12);
  border-radius: 4px;
  background-color: #fff;
  position: absolute;
  top: 340rpx;
  left: 40rpx;
  padding: 0 200rpx;
  box-sizing: border-box;
}
.home-input {
 font-size: 28rpx;
}
.home-main {
  display: flex;
  flex: 1;
  justify-content: center;
  position: relative;
}
.scan-button {
  position: absolute;
  top: 200rpx;
  width: 270rpx;
  height: 270rpx;
  background-color:#2296F3;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 10px 0 rgba(34,150,243,0.72);
}
.false-scan-button {
  position: absolute;
  top: 200rpx;
  width: 270rpx;
  height: 270rpx;
  background-color:#2296F3;
  border-radius: 50%;
  box-shadow: 0 0 10px 0 rgba(34,150,243,0.72);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.scan-text {
  font-size: 32rpx;
  color: #fff;
  margin-top: 20px;
}
.false-scan-text {
  font-size: 32rpx;
  color: #fff;
  position: absolute;
  bottom: 25rpx;
}
.login-button {
  height: 88rpx;
  width: 100%;
  background-color: #2296F3;
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  border: none;
}
.kong-button {
  height: 80rpx;
  width: 100%;
}
.list-img-box {
  width: 200rpx;
  height: 80rpx;
  background-color: #fff;
  border-top-left-radius: 100rpx;
  border-bottom-left-radius:100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 10rpx;
  padding-right: 20rpx;
}
.user-img-box {
  /* width: 200rpx; */
  height: 80rpx;
  background-color: #fff;
  border-top-left-radius: 100rpx;
  border-bottom-left-radius:100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 20rpx;
}
.icon-box {
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 0rpx;
  bottom: 40rpx;
}
.icon-box-title {
  font-size: 28rpx;
}
